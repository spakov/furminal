<?xml version="1.0" encoding="utf-8"?>
<UserControl
  x:Class="Spakov.Terminal.TerminalControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:win2d="using:Microsoft.Graphics.Canvas.UI.Xaml"
  xmlns:local="using:Spakov.Terminal"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  Loaded="UserControl_Loaded">
  <win2d:CanvasControl
    x:Name="Canvas"
    Draw="Canvas_Draw"
    IsTabStop="True"
    AllowFocusOnInteraction="True"
    Loaded="Canvas_Loaded"
    Unloaded="Canvas_Unloaded"
    CreateResources="Canvas_CreateResources"
    ContextRequested="Canvas_ContextRequested"
    RightTapped="Canvas_RightTapped"
    PreviewKeyDown="Canvas_PreviewKeyDown"
    PointerPressed="Canvas_PointerPressed"
    PointerWheelChanged="Canvas_PointerWheelChanged"
    PointerMoved="Canvas_PointerMoved"
    PointerReleased="Canvas_PointerReleased"
    GotFocus="Canvas_GotFocus"
    LosingFocus="Canvas_LosingFocus"
    LostFocus="Canvas_LostFocus"
    SizeChanged="Canvas_SizeChanged"/>
</UserControl>
