{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "settings.json",
  "description": "The w6t settings.",
  "type": "object",
  "properties": {
    "Basics": {
      "description": "Basic settings.",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "Command": {
          "description": "The command to run in the terminal.",
          "default": "powershell",
          "type": [
            "string",
            "null"
          ]
        },
        "DefaultWindowTitle": {
          "description": "The default window title.",
          "default": "w6t",
          "type": [
            "string",
            "null"
          ]
        },
        "Rows": {
          "description": "The number of terminal rows.",
          "default": 24,
          "minimum": 1,
          "type": [
            "integer",
            "null"
          ]
        },
        "Columns": {
          "description": "The number of terminal columns.",
          "default": 80,
          "minimum": 1,
          "type": [
            "integer",
            "null"
          ]
        },
        "TabWidth": {
          "description": "The width of a tab character, in cells.",
          "default": 8,
          "minimum": 1,
          "type": [
            "integer",
            "null"
          ]
        },
        "StartDirectory": {
          "description": "The directory to change to when starting. Set to null to inherit the parent process\u0027s working directory.",
          "default": "%USERPROFILE%",
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "Appearance": {
      "description": "Appearance settings.",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "WindowBackdrop": {
          "description": "The window backdrop to apply.",
          "default": "Mica",
          "enum": [
            "DefaultBackgroundColor",
            "Mica",
            "Acrylic",
            "Blurred",
            "Transparent",
            "SolidColor",
            null
          ]
        },
        "SolidColorWindowBackdropColor": {
          "description": "The color to apply if using the solid color window backdrop.",
          "default": "#ff000000",
          "type": [
            "string",
            "null"
          ]
        },
        "FontFamily": {
          "description": "The font family to use.",
          "default": "0xProto Nerd Font Propo",
          "type": [
            "string",
            "null"
          ]
        },
        "FontSize": {
          "description": "The font size to use.",
          "default": 14,
          "minimum": 1,
          "type": [
            "number",
            "null"
          ]
        },
        "TextAntialiasing": {
          "description": "The antialiasing style to apply to use while rendering text.",
          "default": "Grayscale",
          "enum": [
            "None",
            "Grayscale",
            "ClearType",
            null
          ]
        },
        "FullColorEmoji": {
          "description": "Whether to render full-color emoji using the Segoe UI Emoji font.",
          "default": false,
          "type": [
            "boolean",
            "null"
          ]
        },
        "UseBackgroundColorErase": {
          "description": "Whether to use background color erase.",
          "default": true,
          "type": [
            "boolean",
            "null"
          ]
        },
        "BackgroundIsInvisible": {
          "description": "Whether to render the default background color as transparent.",
          "default": true,
          "type": [
            "boolean",
            "null"
          ]
        }
      }
    },
    "Behavior": {
      "description": "Behavior settings.",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "UseVisualBell": {
          "description": "Whether to use the visual bell or play a sound when the terminal bell rings.",
          "default": false,
          "type": [
            "boolean",
            "null"
          ]
        },
        "VisualBellDisplayTime": {
          "description": "The number of seconds to display the visual bell. Has no effect if UseVisualBell is false.",
          "default": 1,
          "type": [
            "integer",
            "null"
          ]
        },
        "UseContextMenu": {
          "description": "Whether to display the context menu when right clicking the terminal.",
          "default": true,
          "type": [
            "boolean",
            "null"
          ]
        },
        "UseExtendedContextMenu": {
          "description": "Whether to display an extended context menu when right clicking the terminal. Has no effect if UseContextMenu is false.",
          "default": true,
          "type": [
            "boolean",
            "null"
          ]
        }
      }
    },
    "Cursor": {
      "description": "Cursor settings.",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "CursorStyle": {
          "description": "The cursor style to use.",
          "default": "Underline",
          "enum": [
            "Block",
            "Underline",
            "Bar",
            null
          ]
        },
        "CursorThickness": {
          "description": "The cursor thickness to use, as a fraction of the font size. Not applicable to the block cursor.",
          "default": 0.1,
          "minimum": 0,
          "maximum": 1,
          "type": [
            "number",
            "null"
          ]
        },
        "CursorBlink": {
          "description": "Whether to blink the cursor.",
          "default": true,
          "type": [
            "boolean",
            "null"
          ]
        },
        "CursorBlinkRate": {
          "description": "The cursor blink rate, in milliseconds. Has no effect if CursorBlink is false.",
          "default": 500,
          "minimum": 0,
          "type": [
            "integer",
            "null"
          ]
        },
        "CursorColor": {
          "description": "The color to use to draw the cursor.",
          "default": "#ffbac2de",
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "Scrollback": {
      "description": "Scrollback settings.",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "ScrollbackLines": {
          "description": "The number of lines to use for scrollback.",
          "default": 5000,
          "minimum": 0,
          "type": [
            "integer",
            "null"
          ]
        },
        "LinesPerScrollback": {
          "description": "The number of lines to use for a large scrollback.",
          "default": 12,
          "minimum": 1,
          "type": [
            "integer",
            "null"
          ]
        },
        "LinesPerSmallScrollback": {
          "description": "The number of lines to use for a small scrollback.",
          "default": 1,
          "minimum": 1,
          "type": [
            "integer",
            "null"
          ]
        },
        "LinesPerWheelScrollback": {
          "description": "The number of lines to use for a mouse wheel scrollback.",
          "default": 8,
          "minimum": 1,
          "type": [
            "integer",
            "null"
          ]
        }
      }
    },
    "CopyAndPaste": {
      "description": "Copy and paste settings.",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "CopyOnMouseUp": {
          "description": "Whether to copy text to the clipboard when releasing the mouse button after selecting text.",
          "default": false,
          "type": [
            "boolean",
            "null"
          ]
        },
        "PasteOnMiddleClick": {
          "description": "Whether to paste text when middle clicking the terminal.",
          "default": true,
          "type": [
            "boolean",
            "null"
          ]
        },
        "PasteOnRightClick": {
          "description": "Whether to paste text when right clicking the terminal. If this is true, the context menu is displayed with Ctrl-Right Click.",
          "default": false,
          "type": [
            "boolean",
            "null"
          ]
        },
        "CopyNewline": {
          "description": "The string to use to separate lines copied to the clipboard.",
          "default": "\\r\\n",
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "ColorPalette": {
      "description": "Color palette settings.",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "DefaultColors": {
          "description": "The w6t default colors.",
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "DefaultBackgroundColor": {
              "description": "The default background color.",
              "default": "#ff45475a",
              "type": [
                "string",
                "null"
              ]
            },
            "DefaultForegroundColor": {
              "description": "The default foreground color.",
              "default": "#ffa6adc8",
              "type": [
                "string",
                "null"
              ]
            },
            "DefaultUnderlineColor": {
              "description": "The default underline color.",
              "default": "#ffa6adc8",
              "type": [
                "string",
                "null"
              ]
            }
          }
        },
        "StandardColors": {
          "description": "The w6t standard colors.",
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "Black": {
              "description": "Black.",
              "default": "#ff585b70",
              "type": [
                "string",
                "null"
              ]
            },
            "Red": {
              "description": "Red.",
              "default": "#fff38ba8",
              "type": [
                "string",
                "null"
              ]
            },
            "Green": {
              "description": "Green.",
              "default": "#ffa6e3a1",
              "type": [
                "string",
                "null"
              ]
            },
            "Yellow": {
              "description": "Yellow.",
              "default": "#fff9e2af",
              "type": [
                "string",
                "null"
              ]
            },
            "Blue": {
              "description": "Blue.",
              "default": "#ff89b4fa",
              "type": [
                "string",
                "null"
              ]
            },
            "Magenta": {
              "description": "Magenta.",
              "default": "#fff5c2e7",
              "type": [
                "string",
                "null"
              ]
            },
            "Cyan": {
              "description": "Cyan.",
              "default": "#ff94e2d5",
              "type": [
                "string",
                "null"
              ]
            },
            "White": {
              "description": "White.",
              "default": "#ffa6adc8",
              "type": [
                "string",
                "null"
              ]
            }
          }
        },
        "BrightColors": {
          "description": "The w6t bright colors.",
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "BrightBlack": {
              "description": "Bright black.",
              "default": "#ff585b70",
              "type": [
                "string",
                "null"
              ]
            },
            "BrightRed": {
              "description": "Bright red.",
              "default": "#fff37799",
              "type": [
                "string",
                "null"
              ]
            },
            "BrightGreen": {
              "description": "Bright green.",
              "default": "#ff89d88b",
              "type": [
                "string",
                "null"
              ]
            },
            "BrightYellow": {
              "description": "Bright yellow.",
              "default": "#ffebd391",
              "type": [
                "string",
                "null"
              ]
            },
            "BrightBlue": {
              "description": "Bright blue.",
              "default": "#ff74a8fc",
              "type": [
                "string",
                "null"
              ]
            },
            "BrightMagenta": {
              "description": "Bright magenta.",
              "default": "#fff2aede",
              "type": [
                "string",
                "null"
              ]
            },
            "BrightCyan": {
              "description": "Bright cyan.",
              "default": "#ff6bd7ca",
              "type": [
                "string",
                "null"
              ]
            },
            "BrightWhite": {
              "description": "Bright white.",
              "default": "#ffbac2de",
              "type": [
                "string",
                "null"
              ]
            }
          }
        }
      }
    }
  }
}